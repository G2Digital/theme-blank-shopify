{%- doc -%}
  Displays a button or link.

  @param {string} content
  @param {string} [href]
  @param {string} [type]
  @param {string} [variant]
  @param {string} [size]
  @param {string} [shopify_attributes]
  @param {string} [custom_classes]
  @param {string} [icon]
{%- enddoc -%}

{%- liquid
  assign button_tag = 'button'
  if href != blank
    assign button_tag = 'a'
  endif
-%}

{%- if content != blank -%}
  <{{ button_tag }}
    class="button {{ custom_classes }} relative flex items-center gap-2 data-[variant=link]:rounded-full data-[variant=link]:bg-white/20 data-[variant=link]:p-2.5 data-[variant=link]:px-4 data-[size=lg]:text-base data-[variant=link]:text-white"
    data-slot="button"
    {% if size != blank -%}
      data-size="{{ size }}"
    {%- endif %}
    {% if variant != blank -%}
      data-variant="{{ variant }}"
    {%- endif %}
    {% if href != blank -%}
      href="{{ href }}"
    {%- endif %}
    {% if type != blank and href == blank -%}
      type="{{ type }}"
    {%- endif %}
    {% if shopify_attributes != blank -%}
      {{ shopify_attributes }}
    {%- endif %}
  >
    {%- if icon != blank -%}
      {%- case icon -%}
        {%- when 'icon-chat' -%}
          {% render 'icon-chat' %}
      {%- endcase -%}
    {%- endif %}
    {{- content -}}
  </{{ button_tag }}>
{%- endif -%}
