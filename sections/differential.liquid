<section class="bg-[#F5F3FA] py-16">
  <div class="mx-auto max-w-[1600px] px-4 pb-16 sm:px-8 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-{{ section.blocks.size }} items-start gap-8 md:gap-12">
      {% for block in section.blocks limit: 3 %}
        <div
          class="flex items-center gap-8"
          {{ block.shopify_attributes }}
        >
          <div class="relative mb-6">
            <div class="flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-bl from-[white] to-[#7758B3]/20 p-3.5 shadow-sm">
              {% render 'differential-icons', icon_type: block.settings.icon_type %}
            </div>
          </div>
          <div class="space-y-3">
            <h3
              class="text-xl font-semibold"
              style="background: linear-gradient(135deg, rgba(102, 126, 234, 1), rgba(118, 75, 162, 1) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"
            >
              {{ block.settings.title | default: 'Título do Bloco' }}
            </h3>
            <p class="text-sm leading-relaxed text-gray-600">
              {{ block.settings.description | default: 'Descrição do bloco.' }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Seção de Diferenciais",
  "tag": "section",
  "class": "features-section",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "feature_block",
      "name": "Bloco de Diferencial",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Título do Diferencial"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Descrição",
          "default": "Descrição do diferencial."
        },
        {
          "type": "select",
          "id": "icon_type",
          "label": "Tipo de Ícone",
          "options": [
            {
              "value": "shield",
              "label": "Escudo"
            },
            {
              "value": "garantia",
              "label": "Garandia"
            },
            {
              "value": "headset",
              "label": "Fone"
            }
          ],
          "default": "shield"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Diferenciais",
      "blocks": [
        {
          "type": "feature_block",
          "settings": {
            "title": "Excelência Comprovada",
            "description": "Certificações ISO 9001 e ISO 13485, Inmetro e Anvisa.",
            "icon_type": "shield"
          }
        },
        {
          "type": "feature_block",
          "settings": {
            "title": "Garantia de 2 Anos",
            "description": "Mais tranquilidade com cobertura estendida e suporte confiável.",
            "icon_type": "garantia"
          }
        },
        {
          "type": "feature_block",
          "settings": {
            "title": "Atendimento Especializado",
            "description": "Suporte técnico de ponta a ponta, com foco total nas suas necessidades.",
            "icon_type": "headset"
          }
        }
      ]
    }
  ]
}
{% endschema %}
