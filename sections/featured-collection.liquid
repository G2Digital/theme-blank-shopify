<div class="featured-collection relative w-full pt-32">
  <h2 class="mb-6 px-6 text-2xl font-bold md:px-8 lg:px-12">
    {{ section.settings.title | escape }}
  </h2>

  <div class="relative">
    {%- liquid
      # Definir classes de colunas baseadas nas configurações
      assign columns_mobile = section.settings.columns_mobile | default: '2'
      assign columns_desktop = section.settings.columns_desktop | default: '4'
      assign gap_size = section.settings.gap_size | default: '4'

      # Mapear para classes Tailwind
      case columns_mobile
        when '1'
          assign mobile_class = 'w-full'
        when '2'
          assign mobile_class = 'w-1/2'
      endcase

      case columns_desktop
        when '1'
          assign desktop_class = 'lg:w-full'
        when '2'
          assign desktop_class = 'lg:w-1/2'
        when '4'
          assign desktop_class = 'lg:w-1/4'
        when '6'
          assign desktop_class = 'lg:w-1/6'
      endcase

      # Mapear gap para classes Tailwind
      case gap_size
        when '2'
          assign gap_class = 'gap-2'
          assign slide_gap_class = 'pl-2'
        when '4'
          assign gap_class = 'gap-4'
          assign slide_gap_class = 'pl-4'
        when '6'
          assign gap_class = 'gap-6'
          assign slide_gap_class = 'pl-6'
        when '8'
          assign gap_class = 'gap-8'
          assign slide_gap_class = 'pl-8'
        when '12'
          assign gap_class = 'gap-12'
          assign slide_gap_class = 'pl-12'
        else
          assign gap_class = 'gap-4'
          assign slide_gap_class = 'pl-4'
      endcase

      assign slide_class = 'featured-collection__slide flex-none ' | append: mobile_class | append: ' ' | append: desktop_class | append: ' ' | append: slide_gap_class
    -%}

    <div
      class="featured-collection-carousel"
      data-products-count="{{ section.settings.collection.products.size | default: 4 }}"
      data-columns-mobile="{{ columns_mobile }}"
      data-columns-desktop="{{ columns_desktop }}"
      data-gap-size="{{ gap_size }}"
    >
      <div class="featured-collection__viewport overflow-hidden">
        <div class="featured-collection__container flex {{ gap_class }}">
          {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
            <div class="{{ slide_class }}">
              <div class="h-full w-full">
                {%- render 'card-product',
                  card_product: product,
                  new_product_days: section.settings.new_product_days
                -%}
              </div>
            </div>
          {%- else -%}
            {%- for i in (1..4) -%}
              <div class="{{ slide_class }}">
                <div class="h-full w-full">
                  {% render 'card-product', new_product_days: section.settings.new_product_days %}
                </div>
              </div>
            {%- endfor -%}
          {%- endfor -%}
        </div>
      </div>

      <!-- Navigation Arrows -->
      <button
        type="button"
        class="featured-collection__button featured-collection__button--prev absolute left-4 top-1/2 z-10 -translate-y-1/2 transform rounded-full bg-white p-3 shadow-lg transition-all duration-200 hover:bg-gray-50 disabled:cursor-not-allowed disabled:opacity-50 md:left-8 lg:left-12"
        aria-label="Previous products"
      >
        <svg
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>

      <button
        type="button"
        class="featured-collection__button featured-collection__button--next absolute right-4 top-1/2 z-10 -translate-y-1/2 transform rounded-full bg-white p-3 shadow-lg transition-all duration-200 hover:bg-gray-50 disabled:cursor-not-allowed disabled:opacity-50 md:right-8 lg:right-12"
        aria-label="Next products"
      >
        <svg
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Carrossel de produtos",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Mais produtos"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Coleção"
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "Colunas no desktop",
      "default": "4",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "4",
          "label": "4"
        },
        {
          "value": "6",
          "label": "6"
        }
      ]
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Colunas no mobile",
      "default": "2",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ]
    },
    {
      "type": "select",
      "id": "gap_size",
      "label": "Espaçamento entre produtos",
      "default": "4",
      "options": [
        {
          "value": "2",
          "label": "Pequeno (8px)"
        },
        {
          "value": "4",
          "label": "Médio (16px)"
        },
        {
          "value": "6",
          "label": "Grande (24px)"
        },
        {
          "value": "8",
          "label": "Extra Grande (32px)"
        },
        {
          "value": "12",
          "label": "Muito Grande (48px)"
        }
      ]
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Quantidade de produtos",
      "default": 8,
      "min": 1,
      "max": 32,
      "step": 1
    },
    {
      "type": "range",
      "id": "new_product_days",
      "label": "Produtos Novo",
      "default": 15,
      "unit": "D",
      "min": 1,
      "max": 30,
      "step": 1
    }
  ],
  "presets": [
    {
      "name": "Carrossel de produtos"
    }
  ]
}
{% endschema %}
